def convert_datetime(datestring):
    year = int(datestring[:4])
    if datestring[4] == 0:
        month = int(datestring[5])
    else:
        month = int(datestring[4:6])
    if datestring[6] == 0:
        day = int(datestring[7])
    else:
        day = int(datestring[6:8])
    return datetime.datetime(year,month,day)
